<h2>All Ingredients</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Expiration Date</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td>
          <%= ingredient.item %>
        </td>
        <td>
          <%= ingredient.quantity %>
        </td>
        <td>
          <%= ingredient.expiration_date %>
        </td>
        <td>
          <%= link_to "More about #{ingredient.item}", edit_ingredient_path(ingredient) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
