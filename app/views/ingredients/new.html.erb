<div class="hero_image" class="d-flex align-items-center " style="height:600px; width: 100%;border:1px solid black; background-image: url(<%= 'https://source.unsplash.com/_XdU9Q5iFRE' %>);background-size: cover;background-position: center">
  <div class="d-flex justify-content-center h-100">

    <div class="card d-flex align-items-center align-self-center" style="width: 600px;height:400px;border-style: none;background-color: transparent;">
      <div class="card-body">
        <h2>Add new ingredients</h2>

        <%= form_tag ingredients_path, class: 'form' do %>
          <%= label :ingredient, :item, 'Item', :class => 'col-form-label'  %>
          <%= text_field :ingredient, :item, class: 'form-control' %>

          <%= label :ingredient, :quantity, 'Quantity', :class => 'col-form-label'  %>
          <%= text_field :ingredient, :quantity, class: 'form-control' %>

          <br/>
          <div style="text-align:center">  
            <%= submit_tag 'Confirm', :class => 'btn btn-secondary' %>
          </div> 
        <% end %>

        <br/><br/>
        <div style="text-align:center">    
          <a href="/ingredients" class="card-link btn btn-secondary">Back to List</a>
          <a href="/recipe/index" class="card-link btn btn-secondary">Create Recipe</a>
        </div> 
      </div>
    </div>

  </div>
</div>