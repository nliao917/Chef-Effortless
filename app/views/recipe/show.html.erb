<h2>
    <%= @obj['title'] %>
<h2>

<div>
    <%= image_tag(@obj['image']) %>
</div>

<h3>Step List</h3>
<% if @step[0] == nil ||  @step[0]['steps'].length == 0 %>

<%= link_to "Info on external website", @obj['sourceUrl'] %>

<% else %>
<div>
<table class="table table-striped col-md-12" id="used">
  <tbody>
    <% @step[0]['steps'].each do |item| %>
      <tr>
        <td>
          <%= item['step'] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<% end %>

<h3>similars recipes</h3>
<div>
<table class="table table-striped col-md-12" id="used">
  <tbody>
    <% @similars.each do |item| %>
      <tr>
        <td>
          <%= link_to item['title'], recipe_show_path(item['id'])  %>
        </td>
        <td>
          <%= link_to "details", recipe_detail_path(item['id']), :class => 'btn btn-secondary' %>
        </td>
        <td>
          <%= link_to "steps", recipe_show_path(item['id']), :class => 'btn btn-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<h3>Wine pairing recommendations</h3>
<div>
<table class="table table-striped col-md-12" id="used">
  <tbody>
    <%if @obj['winePairing']['productMatches'] %>
    <% @obj['winePairing']['productMatches'].each do |item| %>
      <tr>
        <td>
          <%= item['title'] %>
        </td>
        <td>
          <%= item['price'] %>
        </td>
        <td>
          <%= link_to 'link', item['link'] %>
        </td>
      </tr>
    <% end %>
    <% else %>
      <tr>
        <td>
          no product match
        </td>
      </tr>

    <% end %>
  </tbody>
</table>
<%= link_to "Back", :back %>
</div>