<div class="hero_image" class="d-flex align-items-center " style="height:700px; width: 100%;border:1px solid black; background-image: url(<%= 'https://source.unsplash.com/Q7PclNhVRI0' %>);background-size: cover;background-position: center;background-attachment:fixed;
    overflow:scroll;">
<table class="table table-striped col-md-12 align-self-center ml-4 mt-3" id="ingredients" style="width: 100%;">
  <thead>
    <tr>
      <th>Item</th>
      <th>Details</th>
      <th>Steps</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td>
          <%= recipe[0]%>
          <% if !recipe[1].empty?%>
          <% recipe[1].each do |type| %>
            <button class="btn btn-secondary"><%= type%></button>
            <%end%>
          <% end %>
          <% if !recipe[2].empty?%>
          <% recipe[2].each do |type| %>
            <button class="btn btn-secondary"><%= type%></button>
            <%end%>
          <% end %>
          <% if !recipe[3].empty?%>
          <% recipe[3].each do |type| %>
            <button class="btn btn-secondary"><%= type%></button>
            <%end%>
          <% end %>

          <% if !recipe[4].nil?%>
            <button class="btn btn-secondary"><%= recipe[4]%></button>
          <% end %>
        </td>
        <td>
          <%= link_to 'Detail', recipe_detail_path(recipe[6]), :class => 'btn btn-secondary' %>
        </td>
        <td>

          <%= link_to 'Steps', recipe_show_path(recipe[6]), :class => 'btn btn-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>







